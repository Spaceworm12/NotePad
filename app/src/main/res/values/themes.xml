<resources>
    <!-- Base application theme. -->
    <style name="Theme.Homework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E6D49D</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#36FF00</item>
        <item name="colorControlActivated">@color/custom</item>
        <item name="android:selectableItemBackgroundBorderless">@color/custom</item>
        <item name="toolbarStyle">@drawable/thief</item>
    </style>

