<resources>
    <!-- Base application theme. -->
    <style name="Theme.Homework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E6D49D</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/custom</item>
        <item name="colorControlActivated">@color/custom</item>
        <item name="android:selectableItemBackgroundBorderless">@color/custom</item>
        <item name="toolbarStyle">@drawable/thief</item>
    </style>

    <style name="Theme.Second" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:statusBarColor"></item>
        <item name="colorPrimaryVariant">#4C4C4C</item>
        <item name="android:textColorPrimary">#0BE4CF</item>
        <item name="colorOnPrimary">#0AF1BC</item>
        <item name="colorSecondary">#036042</item>
        <item name="colorSecondaryVariant">#595857</item>
        <item name="colorOnSecondary">#01B7CF</item>
        <item name="android:windowBackground">#7E7D7A</item>
        <item name="toolbarStyle">@color/transparent</item>
    </style>


    <style name="AppTheme.GrayStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

</resources>