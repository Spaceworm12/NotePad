<resources>
    <!-- Base application theme. -->
    <style name="Theme.Homework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E6D49D</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/custom</item>
        <item name="colorControlActivated">@color/custom</item>
        <item name="android:selectableItemBackgroundBorderless">@color/custom</item>
        <item name="toolbarStyle">@drawable/thief</item>
    </style>

    <style name="Theme.Second" parent="Theme.Homework">
        <item name="colorPrimary">@color/purple_200</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#FF0707</item>
    </style>

</resources>