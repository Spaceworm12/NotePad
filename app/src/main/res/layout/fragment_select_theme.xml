<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toots="http://schemas.android.com/tools"
    style="@style/MyBackgroundGradientStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/thief"
        android:layout_margin="20dp"
        android:padding="12dp"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:text="@string/select_theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/undef"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title">


    <RadioButton
        android:id="@+id/main_theme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/thief"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:textAllCaps="true"
        android:drawableStart="@android:drawable/ic_lock_power_off"
        android:textSize="20sp"
        android:text="Main theme"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <RadioButton
        android:id="@+id/second_theme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:background="@drawable/thief"
        android:textAllCaps="true"
        android:drawableStart="@drawable/ic_launcher_foreground"
        android:textAlignment="center"
        android:text="Second Theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_theme" />
    </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
